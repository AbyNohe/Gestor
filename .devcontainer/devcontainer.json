{
    "name": "Flutter Development (Manual Setup)",
    "image": "mcr.microsoft.com/devcontainers/universal:latest",
    "features": {
        "ghcr.com/devcontainers/features/common-utils:2": {},
        "ghcr.com/devcontainers/features/git:1": {},
        "ghcr.com/devcontainers/features/github-cli:1": {},
        "ghcr.com/devcontainers/features/java:1": {
            "version": "17",
            "installMaven": "false",
            "installGradle": "false"
        },
        "ghcr.com/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.dart-code",
                "Dart-Code.flutter",
                "ms-vscode.vscode-android-release",
                "eamodio.gitlens"
            ]
        }
    },
    // Quitamos el postCreateCommand que fallaba
    "portsAttributes": {
        "3000": {
            "label": "Flutter Web App",
            "onAutoForward": "openBrowser"
        }
    },
    "forwardPorts": [3000]
}
