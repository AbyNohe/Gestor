{
    "name": "Flutter Development (Manual Setup V3)",
    "image": "mcr.microsoft.com/devcontainers/universal:latest",
    "features": {
        // common-utils a veces causa problemas. Lo quitamos si no es critico, o probamos una sintaxis alternativa.
        // Para maxima compatibilidad, usaremos la version de feature que es mas comúnmente utilizada y mas antigua/estable si no tiene problemas.
        // o simplemente omitirla si es solo para utilidades menores.
        // Por ahora, probemos con la universal image que ya trae muchas cosas.
        // Si esto falla, podemos intentar instalar herramientas directamente en el postCreateCommand en vez de como features.
        "ghcr.io/devcontainers/features/git:1": {}, // Esto es muy común y no suele fallar
        "ghcr.io/devcontainers/features/github-cli:1": {}, // También muy común
        "ghcr.io/devcontainers/features/java:1": { // Java sigue siendo necesario
            "version": "17",
            "installMaven": "false",
            "installGradle": "false"
        },
        "ghcr.io/devcontainers/features/node:1": { // Node también es común
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.dart-code",
                "Dart-Code.flutter",
                "ms-vscode.vscode-android-release",
                "eamodio.gitlens"
            ]
        }
    },
    "portsAttributes": {
        "3000": {
            "label": "Flutter Web App",
            "onAutoForward": "openBrowser"
        }
    },
    "forwardPorts": [3000]
}
